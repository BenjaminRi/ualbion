        "Number1": "set_active_member 0",
        "Number2": "set_active_member 1",
        "Number3": "set_active_member 2",
        "Number4": "set_active_member 3",
        "Number5": "set_active_member 4",

        "M": "open_map",
        "T": "wait"
    },
    "Inventory": {
        "Control+A": "take_all",
        "Escape": "close_inventory"
    },
    "Dialog": {
        "Number1": "respond 1",
        "Number2": "respond 2",
        "Number3": "respond 3",
        "Number4": "respond 4",
        "Number5": "respond 5",
        "Number6": "respond 6",
        "Number7": "respond 7",
        "Escape": "close_dialog"
    }
