{
    "Global": {
        "Escape": "toggle_menu",
        "Tilde": "push_input_mode Console",
        "Alt+F4": "quit",
        "BracketLeft": "e:mag -1",
        "BracketRight": "e:mag 1",
        "V": "push_input_mode 2",
        "F5": "start_clock",
        "F6": "stop_clock",
        "F10": "update 1",
        "Control+A": "!loadnextmap",
        "Control+X": "!loadprevmap",
        "Pause":  "e:renderdoc",

        "W": "+camera_move  0 -2",
        "A": "+camera_move -2  0",
        "S": "+camera_move  0  2",
        "D": "+camera_move  2  0",

        "Shift+W": "+camera_move  0 -4",
        "Shift+A": "+camera_move -4  0",
        "Shift+S": "+camera_move  0  4",
        "Shift+D": "+camera_move  4  0"
    },
    "Console": {
        "Tilde": "pop_input_mode"
    },
    "DebugPick": {},
    "World2D": {
        "W": "+camera_move  0 -4",
        "A": "+camera_move -4  0",
        "S": "+camera_move  0  4",
        "D": "+camera_move  4  0",

        "Shift+W": "+camera_move  0 -8",
        "Shift+A": "+camera_move -8  0",
        "Shift+S": "+camera_move  0  8",
        "Shift+D": "+camera_move  8  0",

        "Up":    "+party_move  0 -1",
        "Down":  "+party_move  0  1",
        "Left":  "+party_move -1  0",
        "Right": "+party_move  1  0",

        "Tab": "open_inventory",

        "Number1": "set_active_member 0",
        "Number2": "set_active_member 1",
        "Number3": "set_active_member 2",
        "Number4": "set_active_member 3",
        "Number5": "set_active_member 4",

        "Q": "cursor_mode look",
        "E": "cursor_mode manipulate"
    },
    "MouseLook": {
