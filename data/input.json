{
    "Global": {
        "Escape": "toggle_menu",
        "Tilde": "push_input_mode Console",
        "Alt+F4": "quit",
        "BracketLeft": "e:mag -1",
        "BracketRight": "e:mag 1",
        "V": "push_input_mode DebugPick",
        "F5": "start_clock",
        "F6": "stop_clock",
        "F10": "update 1",
        "Control+A": "!loadnextmap",
        "Control+X": "!loadprevmap"
    },
    "Console": {
        "Tilde": "pop_input_mode"
    },
    "World2D": {
        "Keypad4": "+e:camera_move -128  0",
        "Keypad6": "+e:camera_move  128  0",
        "Keypad8": "+e:camera_move  0 -128",
        "Keypad2": "+e:camera_move  0  128",

        "W": "+e:camera_move  0 -128",
        "A": "+e:camera_move -128  0",
        "S": "+e:camera_move  0  128",
        "D": "+e:camera_move  128  0",

        "Shift+W": "+e:camera_move  0 -512",
        "Shift+A": "+e:camera_move -512  0",
        "Shift+S": "+e:camera_move  0  512",
        "Shift+D": "+e:camera_move  512  0",

        "Up":    "+party_move  0 -1",
        "Down":  "+party_move  0  1",
        "Left":  "+party_move -1  0",
        "Right": "+party_move  1  0",

        "Tab": "open_inventory",

        "Number1": "set_active_member 0",
        "Number2": "set_active_member 1",
        "Number3": "set_active_member 2",
        "Number4": "set_active_member 3",
        "Number5": "set_active_member 4",

        "Q": "cursor_mode look",
        "E": "cursor_mode manipulate"
    },
    "MouseLook": {
        "W": "+e:camera_move  0 -128",
        "A": "+e:camera_move -128  0",
        "S": "+e:camera_move  0  128",
        "D": "+e:camera_move  128  0",

        "Shift+W": "+e:camera_move  0 -512",
        "Shift+A": "+e:camera_move -512  0",
        "Shift+S": "+e:camera_move  0  512",
        "Shift+D": "+e:camera_move  512  0",

        "Up":    "+party_move  0 -1",
        "Down":  "+party_move  0  1",
        "Left":  "+party_move -1  0",
        "Right": "+party_move  1  0",

        "Tab": "open_inventory",

        "Number1": "set_active_member 0",
        "Number2": "set_active_member 1",
        "Number3": "set_active_member 2",
        "Number4": "set_active_member 3",
        "Number5": "set_active_member 4",

        "M": "open_map",
        "T": "wait"
    },
    "Inventory": {
        "Control+A": "take_all",
        "Escape": "close_inventory"
    },
    "Dialog": {
        "Number1": "respond 1",
        "Number2": "respond 2",
        "Number3": "respond 3",
        "Number4": "respond 4",
        "Number5": "respond 5",
        "Number6": "respond 6",
        "Number7": "respond 7",
        "Escape": "close_dialog"
    }
}
